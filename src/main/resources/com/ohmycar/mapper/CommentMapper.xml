<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohmycar.mapper.CommentMapper">
	<resultMap id="commentResultMap"
		type="com.ohmycar.domain.CommentVO">
		<id property="cno" column="cno" />
		<result property="bno" column="bno" />
		<result property="content" column="content" />
		<result property="writer" column="writer" />
		<result property="regdate" column="regdate" />
	</resultMap>

	<select id="getCommentsByBoardId" resultMap="commentResultMap">
		SELECT * FROM
		tbl_comment WHERE bno = #{bno} ORDER BY regdate DESC
	</select>

	<insert id="addComment"
		parameterType="com.ohmycar.domain.CommentVO">
		INSERT INTO tbl_comment (cno, bno, content, writer,
		regdate)
		VALUES (seq_comment.nextval, #{bno}, #{content}, #{writer},
		now())
	</insert>
</mapper>
